<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <TextView
        android:padding="16dp"
        android:background="?themeColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/list_header"
        style="@style/CardTitleText"/>

        <gov.wa.wsdot.android.wsdot.ui.trafficmap.travelerinformation.BottomSheetListView
            android:id="@+id/bottom_sheet_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:drawable/divider_horizontal_textfield"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:drawable/divider_horizontal_textfield"/>

    <ImageView
        android:id="@+id/map_legend"
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:paddingTop="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="0dp"
        android:paddingBottom="15dp"
        android:src="@drawable/map_legend"/>

</LinearLayout>