<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        
        <import type="gov.wa.wsdot.android.wsdot.ui.common.binding.BindingFunctions" />
        
        <variable
            name="sailing"
            type="gov.wa.wsdot.android.wsdot.db.ferries.FerrySailing"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <FrameLayout
                android:id="@+id/spaces_view"
                android:orientation="horizontal"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:paddingTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:visibleGone="@{true}">

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:visibility="visible"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/circle_progress_background"
                    android:rotation="-90" />

                <ProgressBar
                    android:id="@+id/sailing_spaces_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/circle_progress_foreground"
                    android:rotation="-90" />

                <TextView
                    android:id="@+id/sailing_spaces_count_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="156"/>

            </FrameLayout>

            <TextView
                style="@style/CardFooterText"
                android:id="@+id/sailing_spaces_label_text_view"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spaces_view"
                android:gravity="center"
                android:text="DRIVE UP"
                app:visibleGone="@{true}"/>

             <LinearLayout
                 android:id="@+id/timesTextView"
                 android:layout_width="wrap_content"
                 app:layout_constrainedWidth="true"
                 android:layout_height="wrap_content"

                 android:background="@{BindingFunctions.hasPassed(sailing.departingTime) ? @drawable/card_title_background_gray : @drawable/card_title_background_green }"

                 app:layout_constraintVertical_chainStyle="spread"

                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"

                 android:layout_marginBottom="8dp"
                 android:layout_marginEnd="8dp"

                 android:paddingTop="8dp"
                 android:paddingBottom="8dp"
                 android:paddingStart="16dp"
                 android:paddingEnd="16dp"

                 android:gravity="start"
                 android:elevation="2dp">


                <TextView
                    style="@style/CardTitleText"
                    android:id="@+id/departingTimeTextView"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bindDateHour="@{sailing.departingTime}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    style="@style/CardTitleText"
                    android:id="@+id/dash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textColor="@color/white"
                    app:visibleGone="@{sailing.arrivingTime != null}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/departingTimeTextView"/>

                <TextView
                    style="@style/CardTitleText"
                    android:id="@+id/arrivingTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    app:bindDateHour="@{sailing.arrivingTime}"
                    app:visibleGone="@{sailing.arrivingTime != null}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dash"
                    app:layout_constraintEnd_toEndOf="parent"/>

             </LinearLayout>

            <TextView
                style="@style/CardSubTitleText"
                android:id="@+id/annotations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:bindStringArray="@{sailing.annotations}"
                app:visibleGone="@{sailing.annotations.size > 0}"
                app:layout_constraintTop_toBottomOf="@+id/timesTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/spaces_view"
                app:layout_constraintBottom_toTopOf="@id/spaces_disclaimer"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:paddingTop="8dp"
                android:singleLine="false" />


            <TextView
                style="@style/CardFooterText"
                android:id="@+id/spaces_disclaimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="vehicles in line for tollbooth are not included in drive up estimate"
                app:layout_constraintTop_toBottomOf="@+id/annotations"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/spaces_view"
                app:layout_constraintBottom_toBottomOf="@id/updated_text_view"
                android:paddingTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:singleLine="false"
                app:visibleGone="@{true}"/>


            <TextView
                style="@style/CardFooterText"
                android:id="@+id/updated_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15 seconds ago"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spaces_disclaimer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:visibleGone="@{true}"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
